---
import Footer from "../components/Footer.astro";
import type { TitleProps } from "../utils/types";
import Layout from "./Layout.astro";

interface Props extends TitleProps {}

const { title } = Astro.props;
---

<Layout title={title}>
  <div>
    <!-- <Header title={title} /> -->
    <main>
      <h1>{title}</h1>
      <slot />
    </main>
    <hr />
    <Footer title={title} />
  </div>
</Layout>

<style>
  div {
    max-width: 600px;
  }
  main {
    padding: 10px;
    min-height: 100dvh;
  }
</style>
