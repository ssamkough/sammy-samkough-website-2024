---
import { getCollection } from "astro:content";
import PageLayout from "../../layouts/PageLayout.astro";
import { TITLES } from "../../utils/constants";
import { formattedNoteDate } from "../../utils/dates";

const allPosts = await getCollection("notes");
---

<PageLayout title={TITLES.notes}>
  <p><a href="/notes/rss.xml">rss feed</a></p>
  <p>list of notes:</p>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={`/notes/${post.slug}`}>{post.data.title}</a>{" "}
          <span>({formattedNoteDate(post.data.publishedDate)})</span>
        </li>
      ))
    }
  </ul>
</PageLayout>
